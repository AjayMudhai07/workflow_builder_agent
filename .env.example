# =============================================================================
# IRA Workflow Builder - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_CHAT_MODEL_ID=gpt-4o
OPENAI_RESPONSES_MODEL_ID=gpt-4o
OPENAI_API_BASE_URL=https://api.openai.com/v1

# -----------------------------------------------------------------------------
# Azure OpenAI Configuration (Alternative)
# -----------------------------------------------------------------------------
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_RESPONSES_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# -----------------------------------------------------------------------------
# Azure AI Foundry Configuration (Alternative)
# -----------------------------------------------------------------------------
AZURE_AI_PROJECT_ENDPOINT=your-project-endpoint
AZURE_AI_MODEL_DEPLOYMENT_NAME=your-deployment-name

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME=IRA Workflow Builder
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Local storage paths
DATA_DIR=./data
UPLOADS_DIR=./data/uploads
OUTPUTS_DIR=./data/outputs
TEMP_DIR=./data/temp

# Storage paths
STORAGE_DIR=./storage
CHECKPOINTS_DIR=./storage/checkpoints
CONVERSATIONS_DIR=./storage/conversations
METADATA_DIR=./storage/metadata

# Logs
LOGS_DIR=./logs

# -----------------------------------------------------------------------------
# Workflow Configuration
# -----------------------------------------------------------------------------
MAX_QUESTIONS=10
MAX_CODE_EXECUTION_TIME=120
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=[".csv", ".xlsx", ".xls"]

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for distributed systems)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Database Configuration (Optional - for production)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/ira_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin credentials (change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Observability & Monitoring
# -----------------------------------------------------------------------------
ENABLE_TRACING=true
TRACING_LEVEL=framework
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Application Insights (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@ira-workflow.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_CHECKPOINTING=true
FEATURE_CONVERSATION_HISTORY=true
FEATURE_CODE_SANDBOX=true
FEATURE_WORKFLOW_ANALYTICS=false

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to false in production
RELOAD_ON_CHANGE=true
PRETTY_PRINT_LOGS=true
